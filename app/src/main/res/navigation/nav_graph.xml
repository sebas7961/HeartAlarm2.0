<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.heartalarm20.view.fragments.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_opcionesFragment"
            app:destination="@id/opcionesFragment" />
    </fragment>

    <fragment
        android:id="@+id/opcionesFragment"
        android:name="com.example.heartalarm20.view.fragments.OpcionesFragment"
        android:label="Opciones"
        tools:layout="@layout/fragment_opciones">
        <action
            android:id="@+id/action_opcionesFragment_to_monitoreoFragment"
            app:destination="@id/monitoreoFragment" />
        <action
            android:id="@+id/action_opcionesFragment_to_parametrosFragment"
            app:destination="@id/parametrosFragment" />
        <action
            android:id="@+id/action_opcionesFragment_to_gestionPacientesFragment"
            app:destination="@id/gestionarPacientesFragment" />
        <action
            android:id="@+id/action_opcionesFragment_to_numeroEmergenciaFragment"
            app:destination="@id/numeroEmergenciaFragment" />
    </fragment>

    <fragment
        android:id="@+id/monitoreoFragment"
        android:name="com.example.heartalarm20.view.fragments.MonitoreoFragment"
        android:label="Monitoreo"
        tools:layout="@layout/fragment_monitoreo" />

    <fragment
        android:id="@+id/parametrosFragment"
        android:name="com.example.heartalarm20.view.fragments.ParametrosFragment"
        android:label="ParÃ¡metros"
        tools:layout="@layout/fragment_parametros" />
    <fragment
        android:id="@+id/gestionarPacientesFragment"
        android:name="com.example.heartalarm20.view.fragments.GestionarPacientesFragment"
        android:label="Gestionar Pacientes"
        tools:layout="@layout/fragment_gestionarpacientes" />
    <fragment
        android:id="@+id/numeroEmergenciaFragment"
        android:name="com.example.heartalarm20.view.fragments.NumeroDeEmergenciaFragment"
        android:label="Numero Emergencia"
        tools:layout="@layout/fragment_numeroemergencia" />


</navigation>
