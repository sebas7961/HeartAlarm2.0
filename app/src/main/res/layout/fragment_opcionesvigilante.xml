<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/roleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/rojoAlarm"
        android:fontFamily="sans-serif-condensed-medium"
        android:shadowColor="#000000"
        android:text="Â¡Heart Alarm!"
        android:textColor="#000000"
        android:textSize="34sp" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/heartbeat_animation"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="70dp"
        app:lottie_rawRes="@raw/alarmfinal"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />
    <Button
        android:id="@+id/btn_GestionarPacientes"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/rojoAlarm"
        android:text="Gestionar Pacientes" />
    <Button
        android:id="@+id/btn_ConectarDispositivo"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:backgroundTint="@color/verdeBoton"
        android:text="Conectar Dispositivo" />


</LinearLayout>
